extends ../includes/navigation.pug 

block styles
    link(rel="stylesheet" href="style/product.css") 

block content 
    if prods.length > 0 
        .grid
            each products in prods 
                article.card.product-item 
                    header.card__header
                        h1.product__title #{products.title}
                    .card__image
                        img(src=products.imageUrl, alt=products.title)
                    .card__content
                        h2.product__price #{products.price}
                        p.product__description #{products.description} 
                    .card__actions
                        a.btn(href=`/products/${products.id}`) Details
                        form(action="/add-to-cart" method="post")  
                            button.btn(type="submit") Add-To-Cart
    else 
        h1 No Products In Cart..       